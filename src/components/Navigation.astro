---
	import logo from "../images/logo.png";
---

<div class="flex justify-between text-dark items-center px-12">
    <div>
        
        <a href="/" class="cursor-pointer">
            <img src={logo} alt="" width="130">
        </a>
    </div>
    
    <div>
        <a class="group relative inline-block text-sm font-medium text-teal focus:outline-none focus:ring active:text-indigo-500" href="/">
            <span class="absolute inset-0 translate-x-0.5 translate-y-0.5 bg-teal transition-transform group-hover:translate-y-0 group-hover:translate-x-0"></span>

            <span class="relative block border border-current bg-snow px-8 py-3">Home</span>
        </a>

        <a class="group relative inline-block text-sm font-medium text-teal focus:outline-none focus:ring active:text-indigo-500" href="/blog/">
            <span class="absolute inset-0 translate-x-0.5 translate-y-0.5 bg-teal transition-transform group-hover:translate-y-0 group-hover:translate-x-0"></span>

            <span class="relative block border border-current bg-snow px-8 py-3">Articles</span>
        </a>

        <a class="group relative inline-block text-sm font-medium text-teal focus:outline-none focus:ring active:text-indigo-500" href="/">
            <span class="absolute inset-0 translate-x-0.5 translate-y-0.5 bg-teal transition-transform group-hover:translate-y-0 group-hover:translate-x-0"></span>

            <span class="relative block border border-current bg-snow px-8 py-3">Portfolio</span>
        </a>


    </div>
</div>